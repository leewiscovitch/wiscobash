#!/usr/bin/env bash
export WISCOBASH_DIR="$HOME/wiscobash"
[ -f "$WISCOBASH_DIR/lib/logging.sh" ] && source "$WISCOBASH_DIR/lib/logging.sh" && wb_log_session_start
[ -f "$WISCOBASH_DIR/lib/distro_detect.sh" ] && wb_source_with_log "$WISCOBASH_DIR/lib/distro_detect.sh" "Distro"
[ -f "$WISCOBASH_DIR/lib/package_manager.sh" ] && wb_source_with_log "$WISCOBASH_DIR/lib/package_manager.sh" "Packages"
wb_log_section_start "Aliases"
for f in "$WISCOBASH_DIR/scripts/alias"/*.sh; do [ -f "$f" ] && wb_source_with_log "$f" "$(basename "$f")"; done
wb_log_section_end "Aliases" "success"
wb_log_section_start "Functions"
for f in "$WISCOBASH_DIR/scripts/functions"/*.sh; do [ -f "$f" ] && wb_source_with_log "$f" "$(basename "$f")"; done
wb_log_section_end "Functions" "success"
wb_log_section_start "Applications"
for f in "$WISCOBASH_DIR/scripts/applications"/*.sh; do [ -f "$f" ] && wb_source_with_log "$f" "$(basename "$f")"; done
wb_log_section_end "Applications" "success"
wb_log_info "WiscoBash ready"
